{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",                     // Required for `paths`
    "paths": {
      "@shared/*": ["../shared/src/*"]  // âœ… resolves imports like @shared/APIReturnType
    }
  },
  "include": ["src", "../shared/src"],
  "references": [{ "path": "../shared" }]
}
