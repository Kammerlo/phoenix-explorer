{
  "version": 2,
  "builds": [
    {
      "src": "packages/backend/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["packages/shared/dist/**"]
      }
    },
    {
      "src": "packages/frontend/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "packages/backend/src/app.ts"
    },
    {
      "src": "/(.*)",
      "dest": "packages/frontend/index.html"
    }
  ]
}
