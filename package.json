{
  "name": "explorer-slim",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "scripts": {
    "prepare": "husky install",
    "backend": "pnpm --filter backend dev",
    "frontend": "pnpm --filter frontend dev",
    "build:shared": "tsc -b packages/shared",
    "build:backend": "tsc -b packages/backend",
    "build": "npm run build:shared && npm run build:backend",
    "dev": "pnpm --filter shared build && concurrently \"pnpm --filter frontend dev\" \"pnpm --filter backend dev\"",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev"
  },
  "dependencies": {
    "@vercel/node": "^5.2.1"
  }
}
